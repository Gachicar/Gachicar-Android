<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".GroupActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step 03: 멤버 초대"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초대할 멤버의 닉네임을 입력해주세요\n최대 3명까지 등록 가능합니다."
        android:layout_gravity="left"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">


        <EditText
            android:id="@+id/nicknameEditText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext"
            android:hint="그룹원1의 닉네임"/>


        <Button
            android:id="@+id/invite1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/smallbtn"
            android:text="초대"
            android:letterSpacing="-0.05"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">


        <EditText
            android:id="@+id/nicknameEditText2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext"
            android:hint="그룹원2의 닉네임"/>


        <Button
            android:id="@+id/invite2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/smallbtn"
            android:text="초대"
            android:letterSpacing="-0.05"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">


        <EditText
            android:id="@+id/nicknameEditText3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext"
            android:hint="그룹원3의 닉네임"/>


        <Button
            android:id="@+id/invite3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/smallbtn"
            android:text="초대"
            android:letterSpacing="-0.05"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/invitenext"
            android:text="멤버 삭제"
            android:letterSpacing="-0.05"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/step3nextbtn"
        android:background="@drawable/nextactive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:letterSpacing="-0.05"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="확인"
        android:layout_marginBottom="60dp"/>
</LinearLayout>