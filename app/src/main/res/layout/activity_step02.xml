<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/cardview_default_radius"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step 02: 공유차량 등록"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="차량 닉네임을 입력하세요"
        android:layout_marginTop="16dp"
        android:layout_gravity="start"/>

    <EditText
        android:id="@+id/nicknameCarEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="예: 가족 출퇴근용"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="차량 번호를 입력하세요"
        android:layout_marginTop="16dp"
        android:layout_gravity="start"/>

    <EditText
        android:id="@+id/numberCarEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="예: 12가 3456"
        android:layout_marginTop="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"/>


    <Button
        android:id="@+id/step2nextbtn"
        android:background="@drawable/nextactive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:letterSpacing="-0.05"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="다음으로"
        android:layout_marginBottom="60dp"/>
</LinearLayout>
