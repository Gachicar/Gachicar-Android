<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가치카"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_gravity="start"
            android:textColor="@color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/groupborder"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="550dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="닉네임"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="님,안녕하세요."
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.widget.Button
                        android:id="@+id/editNick"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:background="#99CCFF"
                        android:text="설정"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/notification_state_btn"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:background="#99CCFF"
                        android:text="@string/notification_state"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/groupborder"
            android:orientation="vertical"
            android:padding="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <!--GetGroupInfo.Data.name-->
                    <TextView
                        android:id="@+id/tvGroupName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="그룹 이름"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <!--GetGroupInfo.Data.desc-->
                    <TextView
                        android:id="@+id/tvOneLineDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:textColor="@color/black" />
                </LinearLayout>

<!--                <android.widget.Button-->
<!--                    android:id="@+id/editGroupDetail"-->
<!--                    android:layout_width="60dp"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:textSize="12sp"-->
<!--                    android:textStyle="bold"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:background="#99CCFF"-->
<!--                    android:text="수정"/>-->
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="그룹장 :"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvGroupLeaderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:layout_weight="1"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="486dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGroupMember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="그룹 멤버"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.widget.Button
                        android:id="@+id/inviteNewMember"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="#99CCFF"
                        android:text="멤버 초대"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/deleteMember"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="#99CCFF"
                        android:layout_marginTop="4dp"
                        android:text="멤버 설정"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/groupborderfilled"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="그룹 차량 정보"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="차량 별명:"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tvCarNickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginStart="8dp"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:textColor="@color/black"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="차량 번호 :"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/carNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="----"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:textColor="@color/black"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="현재위치 :"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/curLoc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="----"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:textColor="@color/black"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="자주 가는 목적지 :"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="----"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:textColor="@color/black"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="최근 사용 날짜 :"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/latestDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:textColor="@color/black"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>

                <android.widget.Button
                    android:id="@+id/editCar"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="#99CCFF"
                    android:text="수정"/>

            </LinearLayout>

            <android.widget.Button
                android:id="@+id/reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="#99CCFF"
                android:text="초기화"/>

        </LinearLayout>

        <android.widget.Button
            android:id="@+id/withdrawl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="right"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black_light"
            android:background="@android:color/transparent"
            android:text="탈퇴하기 ->"/>
    </LinearLayout>
</ScrollView>
