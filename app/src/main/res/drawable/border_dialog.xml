<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/white"/> <!-- 흰색 배경 -->
    <corners android:radius="20dp"/> <!-- 모서리의 반지름을 조절하여 둥근 모서리를 만듭니다. -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/> <!-- 필요에 따라 padding 값을 조정할 수 있습니다. -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0"/> <!-- 테두리 선 -->
    <corners android:radius="20dp"/> <!-- 모서리의 반지름을 조절하여 둥근 모서리를 만듭니다. -->
    <gradient
        android:startColor="#70FFFFFF"
        android:centerColor="#30FFFFFF"
        android:endColor="#10FFFFFF"
        android:angle="90"/> <!-- 그림자의 방향 (여기서는 위쪽으로 그림자가 향하도록 설정) -->
</shape>
