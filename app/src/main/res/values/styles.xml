<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- themes-themes.xml 내에 Theme.YourApp.NoActionBar 정의 -->
    <style name="Theme.GachiCar..NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 여기에 앱의 기본 스타일 속성 추가 -->
        <item name="android:windowBackground">@drawable/splash_drawable</item>
<!--        <item name="android:fontFamily">@font/nanum_barun_gothic</item>-->
    </style>

    <style name="dialog_cancel_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_corner_btn</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@color/sky_blue</item>
    </style>

    <style name="dialog_check_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_corner_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

</resources>